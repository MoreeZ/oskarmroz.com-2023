---
import { Icon } from "astro-icon";

const NAV_ITEMS = [
  {
    text: "Home",
    src: "home",
    href: "/",
  },
  {
    text: "Software",
    src: "software",
    href: "/software-development",
  },
  {
    text: "UI Design",
    src: "ui-design",
    href: "/ui-design",
  },
  {
    text: "Photography",
    src: "photography",
    href: "/photography",
  },
  {
    text: "Blogs",
    src: "blogs",
    href: "/blogs",
  },
];

const pathname = new URL(Astro.request.url).pathname;
---

<div class="header-container">
  <div class="nav-list">
    {
      NAV_ITEMS.map((item, index) => (
        <a
          class={
            "nav-element " +
            item.src +
            (pathname === item.href ? " active" : "")
          }
          href={item.href}
          data-aos-once="true"
          data-aos="fade-down"
          data-aos-delay={0 + index * 100}
        >
          <Icon name={item.src} class="nav-icon" />
          <span class="nav-text">{item.text}</span>
          <div class="underline" />
        </a>
      ))
    }
  </div>
  <div class="mobile-nav-list">
    <div class="container nav-container">
      <input class="checkbox" type="checkbox" name="" id="" />
      <div class="hamburger-lines">
        <span class="line line1"></span>
        <span class="line line2"></span>
        <span class="line line3"></span>
      </div>
      <div class="menu-items">
        {
          NAV_ITEMS.map((item, index) => (
            <a
              class={
                "nav-element " +
                item.src +
                (pathname === item.href ? " active" : "")
              }
              href={item.href}
              data-aos-once="true"
              data-aos="fade-down"
              data-aos-delay={0 + index * 100}
            >
              <Icon name={item.src} class="nav-icon" />
              <span class="nav-text">{item.text}</span>
              <div class="underline" />
            </a>
          ))
        }
      </div>
    </div>
  </div>
</div>

<style lang="css">
  .header-container {
    height: 120px;
    width: 100%;
    display: flex;
    align-items: center;
  }
  .nav-list {
    display: flex;
    gap: 40px;
    position: relative;
    margin: 0px 120px;
  }
  .mobile-nav-list {
    display: none;
    z-index: 10;
    /* overflow: hidden; */
  }
  .nav-element {
    color: #ebebeb;
    text-decoration: none;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }
  .nav-element:active {
    opacity: 0.7;
  }
  .nav-icon {
    margin-right: 15px;
    height: 26px;
  }
  .nav-element [astro-icon] {
    fill: #ebebeb;
  }
  .active [astro-icon] {
    fill: #a1ffa8;
  }
  .underline {
    height: 3px;
    transition: width 0.2s, background-color 0.5s;
    margin: 0 auto;
    background-color: transparent;
    width: 0%;
    background-color: #a1ffa8;
    position: absolute;
    bottom: -15px;
  }

  .active .underline {
    width: 100%;
  }

  .nav-element:hover .underline {
    background-color: #a1ffa8;
    width: 100%;
  }

  .nav-element:active a {
    transition: none;
    color: rgba(255, 255, 255, 0.76);
  }

  .nav-element:active .underline {
    opacity: 0.7;
  }
  .nav-text {
    font-size: 20px;
  }
  .active {
    color: #a1ffa8;
  }
  @media only screen and (max-width: 1080px) {
    .nav-list {
      display: none;
    }
    .mobile-nav-list {
      display: flex;
      width: 100%;
      height: 100%;
    }

    .nav-container {
      width: 100%;
      display: flex;
      justify-content: space-between;
      align-items: center;
      position: relative;
    }

    .nav-container .checkbox {
      position: absolute;
      display: block;
      height: 32px;
      width: 32px;
      left: 120px;
      z-index: 5;
      opacity: 0;
      cursor: pointer;
    }

    .nav-container .hamburger-lines {
      height: 26px;
      width: 32px;
      position: absolute;
      left: 120px;
      z-index: 2;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }

    .nav-container .hamburger-lines .line {
      display: block;
      height: 4px;
      width: 100%;
      border-radius: 10px;
      background: #ebebeb;
    }

    .nav-container .hamburger-lines .line1 {
      transform-origin: 0% 0%;
      transition: transform 0.4s ease-in-out;
    }

    .nav-container .hamburger-lines .line2 {
      transition: transform 0.2s ease-in-out;
    }

    .nav-container .hamburger-lines .line3 {
      transform-origin: 0% 100%;
      transition: transform 0.4s ease-in-out;
    }

    .menu-items {
      position: absolute;
      top: 0;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: flex-start;
      padding-top: 120px;
      background-color: #232323;
      color: #ebebeb;
      height: 100dvh;
      width: 100%;
      transform: translateX(-150%);
      flex-direction: column;
      transition: transform 0.5s ease-in-out;
      text-align: center;
    }

    .nav-container .nav-element {
      text-decoration: none;
      font-weight: 500;
      font-size: 1.2rem;
      padding: 0.7rem;
      margin-bottom: 1.2rem;
    }

    .nav-container input[type="checkbox"]:checked ~ .menu-items {
      transform: translateX(0);
    }

    body:has(.nav-container input[type="checkbox"]:checked) {
      overflow-y: hidden;
    }

    .nav-container input[type="checkbox"]:checked ~ .hamburger-lines .line1 {
      transform: rotate(45deg);
    }

    .nav-container input[type="checkbox"]:checked ~ .hamburger-lines .line2 {
      transform: scaleX(0);
    }

    .nav-container input[type="checkbox"]:checked ~ .hamburger-lines .line3 {
      transform: rotate(-45deg);
    }
  }
</style>
