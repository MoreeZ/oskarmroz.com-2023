---
import { Icon } from "astro-icon";

export interface Props {
  title: string;
  image: string;
  icon: string;
  href: string;
  id: string;
}
const { title, image, icon, href, id } = Astro.props;
---

<a class="landing-section" href={href} id={id}>
  <div class="bg-img-container">
    <img src={image} alt="screen with programming" />
    <div class="img-mask"></div>
  </div>
  <div data-aos="zoom-in"><Icon name={icon} /></div>
  <h2 data-aos="zoom-in">{title}</h2>
</a>

<style lang="css">
  .landing-section {
    width: 100%;
    height: 380px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    position: relative;
    cursor: pointer;
    text-decoration: none;
  }

  .landing-section .bg-img-container {
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    z-index: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }
  .landing-section img {
    width: 100%;
    z-index: 0;
  }
  .landing-section .img-mask {
    width: 100%;
    height: 100%;
    background-color: rgba(45, 46, 48, 0.65);
    transition: background-color 200ms;
    z-index: 1;
    position: absolute;
  }
  .landing-section:hover .img-mask {
    background-color: rgba(45, 46, 48, 0.8);
  }

  .landing-section [astro-icon] {
    fill: #ebebeb;
    height: 140px;
    margin-bottom: 10px;
    z-index: 1;
  }

  .landing-section h2 {
    font-size: 40px;
    color: #ebebeb;
    z-index: 1;
  }
</style>
